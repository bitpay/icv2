{
  "dependencies": {
    "angular2": "2.0.0-beta.6",
    "es6-promise": "3.0.2",
    "es6-shim": "0.33.13",
    "ionic-angular": "2.0.0-beta.2",
    "ionicons": "3.0.0-alpha.3",
    "reflect-metadata": "0.1.2",
    "rxjs": "5.0.0-beta.0",
    "zone.js": "0.5.14"
  },
  "devDependencies": {
    "awesome-typescript-loader": "0.15.10",
    "cz-conventional-changelog": "^1.1.5",
    "electron-prebuilt": "^0.36.10",
    "ghooks": "^1.0.3",
    "strip-sourcemap-loader": "0.0.1",
    "typescript": "1.7.5",
    "validate-commit-msg": "^2.3.1"
  },
  "name": "icv2",
  "description": "icv2",
  "license": "MIT",
  "main": "electron.js",
  "scripts": {
    "start": "node develop.js",
    "electron": "electron electron.js",
    "install": "npm run install-tooling && cordova prepare",
    "install-tooling": "npm run install-hooks && npm run install-starter && npm run install-simserver",
    "install-hooks": "cd tooling/hooks && npm install",
    "install-starter": "cd packaged-plugins/starter && npm install",
    "install-simserver": "cd tooling/simserver && npm install",
    "serve-app": "ionic serve -p 8105 -r 35735",
    "serve-starter": "cd packaged-plugins/starter && ionic serve -b -p 8110 -r 35740",
    "serve-simserver": "node tooling/simserver/proxy.js 8110",
    "clean": "rm -rf node_modules && rm -rf platforms && rm -rf plugins",
    "workaround-simsymlinks": "rm -rf app/components/plugin-manager/icv2-plugin-client && rm -rf packaged-plugins/starter/app/icv2-plugin-client && cp -R lib/icv2-plugin-client app/components/plugin-manager/icv2-plugin-client && cp -R lib/icv2-plugin-client packaged-plugins/starter/app/icv2-plugin-client"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/bitpay/ionic2-copay.git"
  },
  "cordovaPlugins": [
    "cordova-plugin-device",
    "cordova-plugin-console",
    "cordova-plugin-whitelist",
    "cordova-plugin-splashscreen",
    "cordova-plugin-statusbar",
    "ionic-plugin-keyboard"
  ],
  "cordovaPlatforms": [
    "ios"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "commit-msg": "validate-commit-msg"
    },
    "validate-commit-msg": {
      "helpMessage": "\nThis project uses commitizen to document changes. Please try:\nnpm install commitizen -g && git cz\n"
    }
  }
}
